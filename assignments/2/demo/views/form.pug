extends layout

block content
	h1= title
	a(href="/") Index
	a(href="/about") About
	a(href="/form") Form
	form.form-horizontal(action="/form", method="post", role="form")
		.form-group
				input#name.form-control(name="name" placeholder="Name" type="text")
				input#email.form-control(name="email" placeholder="Email" type="text")
				textarea#comments.form-control(name="comments" placeholder="Comments")
		input(type="submit" value="Submit")