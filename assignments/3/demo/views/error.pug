extends layout

mixin generate()
	-var r = Math.floor(Math.random() * (8 - 5 + 1) + 5);
	- var a = 0;
	tbody
		while a < r
			+make(r)
			-a++;	

mixin make(r)
	-var b = 0;
	-var values = ["still", "rotate", "shrink"];
	tr
		while b < r
			-var v = Math.floor(Math.random() * 2);
			td(class=values[v])= 404
			-b++;

block content
	table
		+generate()
